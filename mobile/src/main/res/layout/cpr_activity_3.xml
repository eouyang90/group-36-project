<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background1">

    <ImageView
        android:layout_width="364dp"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/compression_bg"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-2dp"
        android:layout_marginLeft="-2dp"
        android:id="@+id/imageView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:textColor="#315044"
        android:textSize="70dp"
        android:id="@+id/compression_reps"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="15dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textView4"
        android:layout_marginTop="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reps"
        android:textColor="#315044"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/compression_reps"
        android:layout_alignEnd="@+id/startCPR"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="25dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="depth: 2 inches\nrate: 100 per min"
        android:textColor="#315044"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/compression_desc"
        android:layout_below="@+id/compression_reps"
        android:layout_alignStart="@+id/compression_reps" />

    <ImageView
        android:layout_width="364dp"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_marginTop="-2dp"
        android:layout_marginLeft="-2dp"
        android:src="@drawable/breath_bg"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView2" />
    <Button
        android:layout_width="290dp"
        android:layout_height="114dp"
        android:background="#77BFA3"
        android:textSize="34dp"
        android:text="Start default CPR"
        android:id="@+id/startCPR"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textColor="#315044"
        android:textSize="70dp"
        android:id="@+id/breath_rep"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="breaths"
        android:textColor="#315044"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/textView5"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/breath_rep"
        android:layout_toStartOf="@+id/compression_desc"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 second\nper breath"
        android:textColor="#315044"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/breath_desc"
        android:layout_below="@+id/breath_rep"
        android:layout_alignStart="@+id/startCPR" />

</RelativeLayout>

