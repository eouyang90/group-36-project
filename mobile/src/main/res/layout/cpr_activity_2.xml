<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background1">
    <ImageView
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/environment_yes"
        android:id="@+id/environment_yes"
        android:layout_above="@+id/environment_no"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:gravity="bottom"
        android:src="@drawable/environment_no"
        android:id="@+id/environment_no"
        android:layout_gravity="bottom" />
    <TextView
        android:layout_width="280dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textColor="#315044"
        android:textSize="40dp"
        android:text="Is the environment clear?"
        android:layout_marginTop="34dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView3" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="40dp"
        android:text="Make sure youâ€™re safe before helping others! No fires, no falling debris, and preferably a flat surface."
        android:id="@+id/textView2"
        android:textColor="#315044"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />
</RelativeLayout>